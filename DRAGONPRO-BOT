

_get_repolink () {
    local regex
    regex='(https?)://github.com/.+/.+'
    if [[ $DRAGON_REPO == "DRAGOBOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL0xFR0VORC1MWC9EUkFHT05VU0VSQk9ULVBSTy9hcmNoaXZlL21haW4uemlw" | base64 -d
    elif [[ $DRAGON_REPO == "DRAGONBOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL0xFR0VORC1MWC9EUkFHT05VU0VSQk9ULVBSTy9hcmNoaXZlL21haW4uemlw" | base64 -d
    elif [[ $DRAGON_REPO =~ $regex ]]
    then
        if [[ $DRAGON_REPO_BRANCH ]]
        then
            echo "${DRAGON_REPO}/archive/${DRAGON_REPO_BRANCH}.zip"
        else
            echo "${DRAGON_REPO}/archive/DRAGON.zip"
        fi
    else
        echo "aHR0cHM6Ly9naXRodWIuY29tL0xFR0VORC1MWC9EUkFHT05VU0VSQk9ULVBSTy9hcmNoaXZlL21haW4uemlw" | base64 -d
    fi
}


_dragon_bot () {
    local zippath
    zippath="DRAGON.zip"
    echo "  ğŸ” Downloading Pro SaTyaBoT Source Code... ğŸ”"
    wget -q $(_get_repolink) -O "$zippath"
    echo "  ğŸ’«ğŸ“Unpacking Data...ğŸ“ğŸ’«"
    echo " Legend-SaTyaBoT Supporting..."
    DRAGONPATH=$(zipinfo -1 "$zippath" | grep -v "/.");
    unzip -qq "$zippath"
    echo " ğŸ’¥ Download Complete Now Installing ğŸ’¥"
    echo "  ğŸ–•ğŸ» INSTALLING THA SATYABOT ğŸ–•ğŸ»"
    rm -rf "$zippath"
    sleep 5
    cd $DRAGONPATH
    echo "    ğŸª¡Starting Tha SaTyaáºÃ¸TğŸª¡     "
    echo " â™¥ï¸ NOW WAIT 5 MIN INSTALLING ALL PLUGIN â™¥ï¸"
    echo "ğŸ˜ˆ Uploading. Bots On Telegram Clintes..ğŸ˜ˆ"

    python3 ../setup/updater.py ../requirements.txt requirements.txt
    python3 -m userbot
}

_dragon_bot
